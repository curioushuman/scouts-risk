package web_event

import (
"scouts-risk/web"
"scouts-risk/internal/model"
"scouts-risk/internal/ui"
)

templ Events() {
@web.Base() {
{ children... }
}
}

templ EventDescription(event model.Event) {
<div class="px-4">
  <h1 class="pb-0 mb-0 mt-3">
    <a class="text-black text-base block" href="/risk/event">Events ></a> { event.Label }
  </h1>
  <p class="mt-1 mb-1">
    <span class="font-semibold block">
      @ui.SmallDate(event.Date)
    </span>
    { event.Description }
  </p>
</div>
}